-- Superstore Data Analysis Project (SQL)
-- ðŸ“Œ GitHub- SQL Portfolio of Superstore Data Analysis 

-- ðŸ§¹ 1. Preview Data
SELECT TOP 10 * FROM superstore_data;

-- ðŸ§¹ 2. Check Duplicate Order IDs
SELECT order_id, COUNT(*)
FROM superstore_data
GROUP BY order_id
HAVING COUNT(*) > 1;

-- ðŸ§¹ 3. Check for NULL Values
SELECT 
  SUM(CASE WHEN sales IS NULL THEN 1 ELSE 0 END) AS null_sales,
  SUM(CASE WHEN profit IS NULL THEN 1 ELSE 0 END) AS null_profit,
  SUM(CASE WHEN region IS NULL THEN 1 ELSE 0 END) AS null_region
FROM superstore_data;

-- ðŸ§¹ 4. Check Order and Ship Dates
SELECT TOP 5 order_date, ship_date
FROM superstore_data;

-- ðŸ“Š 5. Total Sales and Profit
SELECT 
  ROUND(SUM(sales), 2) AS total_sales,
  ROUND(SUM(profit), 2) AS total_profit
FROM superstore_data;

-- ðŸ“Š 6. Top 5 States by Sales
SELECT TOP 5
    state,
    SUM(sales) AS total_sales
FROM superstore_data
GROUP BY state
ORDER BY total_sales DESC;

-- ðŸ“Š 7. Sales by Category and Sub-Category
SELECT 
  category,
  sub_category,
  ROUND(SUM(sales), 2) AS sales
FROM superstore_data
GROUP BY category, sub_category
ORDER BY category, sales DESC;

-- ðŸ“Š 8. Monthly Sales Trend
SELECT 
  FORMAT(order_date, 'yyyy-MM') AS month,
  ROUND(SUM(sales), 2) AS total_sales
FROM superstore_data
GROUP BY FORMAT(order_date, 'yyyy-MM')
ORDER BY month;

-- ðŸ“Š 9. Profit by Region
SELECT 
  region,
  ROUND(SUM(profit), 2) AS total_profit
FROM superstore_data
GROUP BY region
ORDER BY total_profit DESC;

-- ðŸ“Š 10. Loss-Making Products (Top 10)
SELECT TOP 10
  product_name,
  SUM(profit) AS total_profit
FROM superstore_data
GROUP BY product_name
HAVING SUM(profit) < 0
ORDER BY total_profit ASC;

-- ðŸ“Š 11. Average Order Value
SELECT 
  ROUND(SUM(sales) / COUNT(DISTINCT order_id), 2) AS avg_order_value
FROM superstore_data;

-- ðŸ“Š 12. Summary KPIs
SELECT 
  COUNT(DISTINCT order_id) AS total_orders,
  COUNT(DISTINCT customer_name) AS total_customers,
  COUNT(DISTINCT product_name) AS total_products,
  ROUND(SUM(sales), 2) AS total_sales,
  ROUND(SUM(profit), 2) AS total_profit
FROM superstore_data; re write us code  git  hub environment to upload  for  my intervie project
